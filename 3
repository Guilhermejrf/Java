    private void SomaActionPerformed(java.awt.event.ActionEvent evt) {                                     
   double Valor1,Valor2,Valor3,resultado;

Valor1= Double.parseDouble(this.Valor1.getText());
Valor2= Double.parseDouble(this.Valor2.getText());
Valor3= Double.parseDouble(this.Valor3.getText());

resultado=(Math.round (Valor1+Valor2+Valor3));   
        
        if (resultado>50000) {
this.resultado.setText("Valor" + "Estourou o orçamento");
        } else {
this.resultado.setText("Valor" + "Não estourou o orçamento");
        }
    }                                    

